@model tryno2.Models.Take

@{
    ViewBag.Title = "Create";
}




@using (Html.BeginForm("create", "students", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Courses</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        @Html.LabelFor(s => s.Course.Name)
        <div class="col-md-10">
            @Html.DropDownListFor(s => s.Course_id, ViewData["course_id"] as IEnumerable<SelectListItem>, new { @class = "form-control" })
            @Html.ValidationMessageFor(s => s.Course_id, "", htmlAttributes: new { @style = "color:red" })
        </div>
    </div>



</div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add" class="btn bg-success" />
        </div>
    </div>

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
